service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /ruleSets/{ruleSet} {
      allow read;
    }
    match /ruleSets/{ruleSet} {
      allow write: if request.auth.uid == resource.data.creatorId;
    }
  }
}
